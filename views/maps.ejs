<!DOCTYPE html>
<html lang="en">

<head>
  <title>Maps</title>

  <!-- Fonts -->
  <link
    href="https://fonts.googleapis.com/css2?family=Bungee&family=Source+Sans+Pro:ital,wght@0,300;0,700;1,300;1,700&display=swap"
    rel="stylesheet">

  <!-- App CSS -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/styles.css" type="text/css" />

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

  <!-- App Scripts -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <script type="text/javascript" src="/scripts/login.js"></script>
  <script type="text/javascript" src="/scripts/pins.js"></script>

  <!-- External Scripts -->
  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBiRcxn1kSOj0mSXNBoGX7XnaP5c3-MhqQ&callback=initMap&&libraries=places&v=weekly"
    defer></script>
</head>

<body>

  <%- include('partials/_header') %>

    <div id="maps-list-main" class="main-page">
      <h2>Saved Maps</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Map Name</th>
            <th scope="col">Show</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for (const map of maps) { %>
            <tr>
              <td><%= map.name %></td>
              <td><form method="GET" action="/<%= map.id %>"><button type="submit">Show</button></form></td>
              <td><form method="GET" action="/userData/<%= map.id %>/edit"><button type="submit">Edit</button></form></td>
              <td><form method="POST" action="/userData/<%= map.id %>/delete?_method=DELETE"><button type="submit">Delete</button></form></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <div>
      <form action="/userView" method="GET">
        <button class="new-list">Create New Map</button>
      </form>
    </div>

</body>

</html>
